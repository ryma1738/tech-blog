<div class="col-1"></div>

<div class="col-10 bg-light bar">
    <div class="my-4 mx-2">
        {{#each posts as |post|}}
        <div class="post-box bg-silver my-2">
            <div class="row px-2">
                <div class="col-7 my-2">
                    <a class="text-decoration-none text-dark" data-bs-toggle="collapse" data-bs-target="#post{{post.id}}" aria-expanded="true" aria-controls="post{{post.id}}">
                        <h4 class="">{{post.title}}</h4>
                    </a>  
                </div>
                <div class="col-5 my-2">
                    <p class="text-end">Created by: {{post.user.username}}, {{format_date post.createdAt}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="collapse" id="post{{post.id}}">
                        <div class="card card-body bg-silver">
                            {{post.content}}
                            <div class="row">
                                <div class="d-flex align-items-center ">
                                    <button class="btn btn-secondary mt-1" data-bs-toggle="collapse" data-bs-target="#comments{{post.id}}" aria-expanded="true" aria-controls="comments{{post.id}}">
                                        Comments:
                                    </button>
                                    <p class="px-2">Total Comments: {{comments.length}}</p>
                                    {{#if loggedIn}}
                                    <div class="ms-auto me-4">
                                        <button class="btn btn-secondary mt-1" data-bs-toggle="collapse" data-bs-target="#addComment{{post.id}}" aria-expanded="true" aria-controls="addComment{{post.id}}">
                                        Add a Comment
                                    </button>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                            {{#if loggedIn}}
                            <div class="row">
                                <div class="collapse mt-2" id="addComment{{post.id}}">
                                    <textarea class="form-control" id="commentText" rows="1"></textarea>
                                    <button type="button" class="btn btn-outline-secondary mt-2" id="addComment">Comment</button>
                                </div>
                            </div>
                            {{/if}}
                            <div class="row">
                                <div class="collapse mt-2" id="comments{{post.id}}">
                                {{> comments post.comments}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="col-1"></div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" 
crossorigin="anonymous"></script>
